---
import { css } from "styled-system/css"
import BaseLayout from "./BaseLayout.astro"
import Overview from "@/components/Overview.astro"
import type { MarkdownHeading } from 'astro'

interface Props {
  title: string
	tags: string[]
  description: string
  url: string
  headings: MarkdownHeading[]
  readingTime: number
}

const {
	title,
	tags,
	description,
	url,
	headings,
	readingTime,
} = Astro.props

const root = css({
	lg: {
		display: "grid",
		gridTemplateColumns: "16rem 1fr",
		gap: "8"
	},
})

const root__overview = css({
	lg: {
    position: "sticky",
    top: "8",
    alignSelf: "start",
  },
})

---
<BaseLayout {url} {title} {description}>
	<main class={root}>
		<Overview
			className={root__overview}
			{title}
			{tags}
			{headings}
			{readingTime}
		/>
    
    <!-- https://pagefind.app/docs/indexing/ -->
		<section data-pagefind-body>
			<slot />
		</section>
	</main>
</BaseLayout>
