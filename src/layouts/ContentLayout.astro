---
import { css } from "styled-system/css"
import BaseLayout from "./BaseLayout.astro"
import Overview from "@/components/Overview.astro"
import type { MarkdownHeading } from 'astro'

interface Props {
  title: string
  description: string
  url: string
  headings: MarkdownHeading[]
  readingTime: number
}

const { title, description, url, headings, readingTime } = Astro.props

const root = css({
	lg: {
		display: "grid",
		gridTemplateColumns: "16rem 1fr",
		gap: "8"
	},
})

const root__overview = css({
	lg: {
    position: "sticky",
    top: "8",
    alignSelf: "start",
  },
})

const root__content = css({
})
---
<BaseLayout {url} {title} {description}>
	<main class={root}>
		<Overview className={root__overview} {title} {headings} {readingTime} />
    
    <!-- https://pagefind.app/docs/indexing/ -->
		<section data-pagefind-body class={root__content}>
			<slot />
		</section>
	</main>
</BaseLayout>
