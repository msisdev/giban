---
import { getCloudflareImgSrc } from '@/lib/get-img-src'
import { css } from 'styled-system/css'

interface Props {
  src: string
  alt: string
}
const { src, alt } = Astro.props

// CLOUDFLARE_ONLY
const { env } = Astro.locals.runtime

const root = css({
  display: "block",
  maxW: "full",
  maxH: "full",
  objectFit: "contain",
})
---

<picture class={root}>
  <source src={getCloudflareImgSrc(env, src)}>
  <img {src} {alt}>
</picture>
