---
import { getWorkingDateString } from '@/lib/get-date-string'
import { css } from 'styled-system/css'

interface Props {
  href: string
  title: string
  description?: string
  start: Date
  end?: Date
}

const { href, title, description, start, end } = Astro.props

const dateString = getWorkingDateString(start, end)

const root = css({
  display: "block",
  borderRadius: "box",
  p: 8,

  bg: "primary.50",
  _hover: { bg: "primary.100" },

  color: "text",
  textDecoration: "none",
})

const root__title = css({
  fontSize: "3xl",
})

---
<a {href} class={root}>
  <p class={root__title}>{title}</p>
  <p>{description}</p>
  <p>{dateString}</p>
</a>
