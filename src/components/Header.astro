---
import paths from "@/config/paths"
import { css } from "styled-system/css"
import { flex } from "styled-system/patterns"
import { Icon } from "astro-icon/components"
import ColorModeSwitch from "./ColorModeSwitch.astro"

const root = css({
  w: "full",
  fontSize: "xl",
})

const root__nav = flex({
  w: "full",
  justifyContent: "space-between",
  alignItems: "center",
})

const root__home = css({
  fontSize: "3xl",
})

const root__menus = flex({
  flexWrap: "wrap",
  gap: 4,
  alignItems: "center"
})
---

<header class={root}>
  <nav class={root__nav}>
    <ul>
      <li><a href={paths.home} class={root__home}><strong>기반</strong></a></li>
    </ul>
    <ul class={root__menus}>
      <li>
        <a href={paths.search} aria-label="search">
          <Icon name="iconoir:search" />
        </a>
      </li>
      <li>
        <a href={paths.posts} aria-label="posts">
          <Icon name="iconoir:post" />
        </a>
      </li>
      <li>
        <a href={paths.projects} aria-label="projects">
          <Icon name="iconoir:handbag" />
        </a>
      </li>
      <li>
        <ColorModeSwitch />
      </li>
    </ul>
  </nav>
</header>
